\mode<presentation>

\setbeamercolor{title in head/foot}{parent=palette quaternary}
\setbeamercolor{framenumber in head/foot}{parent=palette quaternary}

\usesectionheadtemplate
  {\hfill\insertsectionhead}
  {\hfill\color{fg!50!bg}\insertsectionhead}

\defbeamertemplate*{footline}{altsplit theme}
{%
  \leavevmode%
  \hbox{\begin{beamercolorbox}[wd=.9\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=2ex, rightskip=10ex]{title in head/foot}%
    %\usebeamerfont{title in head/foot}\insertshortauthor, \insertshortinstitute, \shortuniversity: \insertshorttitle
    \usebeamerfont{title in head/foot}\insertshortauthor: \insertshorttitle
  \end{beamercolorbox}%
  % print page number if not already
  \setcounter{framediff}{\inserttotalframenumber}%
  \addtocounter{framediff}{-\value{framenumber}}%
  \ifnum\value{framediff}>-1
	  \begin{beamercolorbox}[wd=.1\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=2ex,rightskip=2ex]{framenumber in head/foot}%
	    \usebeamerfont{title in head/foot}\hfill{\insertframenumber~/~\inserttotalframenumber}
	  \end{beamercolorbox}%
  \fi%
	}%
  \vskip0pt%
}

\mode
<all>
